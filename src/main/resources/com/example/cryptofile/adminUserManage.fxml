<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="700.0" prefWidth="950.0" style="-fx-background-color:  #f5f6fa;" stylesheets="@styles/logs.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cryptofile.AdminUserManageController">
    <center>
        <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
                    <VBox spacing="25" style="-fx-padding: 0 30 30 30;">
                  <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                     <children>
                              <VBox spacing="10" style="-fx-padding: 30 30 20 30;" HBox.hgrow="ALWAYS">
                                  <children>
                                      <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="User Management" />
                                      <Label style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" text="Manage and monitor all system users" />
                                  </children>
                              </VBox>
                        <Button fx:id="addUserButton" mnemonicParsing="false" onAction="#addUser" style="-fx-font-size: 18;" text="Add New User" />
                     </children>
                  </HBox>

                        <HBox spacing="20" style="-fx-alignment: center;">

                            <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 12;                            -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);                            -fx-min-width: 180; -fx-alignment: center;">
                                <Label fx:id="totalOperationsIcon" />
                                <Label style="-fx-font-size: 15; -fx-text-fill: #7f8c8d;" text="Total users" />
                                <Label fx:id="totalUsersLabel" style="-fx-font-size: 32px;" text="0" />
                            </VBox>
                            <VBox spacing="10" style="-fx-background-color:  white; -fx-padding: 20; -fx-background-radius: 12;                            -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);                            -fx-min-width: 180; -fx-alignment: center;">
                                <Label fx:id="encryptedCountIcon" />
                                <Label style="-fx-font-size: 15; -fx-text-fill: #7f8c8d;" text="Standard users" />
                                <Label fx:id="standardUsersLabel" style="-fx-font-size: 32px;" text="0" />
                            </VBox>

                            <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 12;                            -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);                            -fx-min-width: 180; -fx-alignment: center;">
                                <Label fx:id="decryptedCountIcon" />
                                <Label style="-fx-font-size: 15; -fx-text-fill: #7f8c8d;" text="Admins" />
                                <Label fx:id="adminsLabel" style="-fx-font-size: 32px;" text="0" />
                            </VBox>
                            <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 12;                            -fx-effect:  dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);                            -fx-min-width: 180; -fx-alignment: center;">
                                <Label fx:id="successRateIcon" textFill="#80008012" />
                                <Label style="-fx-font-size: 15; -fx-text-fill: #7f8c8d;" text="New this month" />
                                <Label fx:id="newUsersLabel" style="-fx-font-size: 32px;" text="0" />
                            </VBox>

                        </HBox>
                        <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius:  12;                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">

                            <TableView fx:id="activityTable" stylesheets="@styles/logs.css">
                                <columns>
                                    <TableColumn fx:id="usernameColumn" prefWidth="80.0" style="-fx-alignment: CENTER;" text="Username" />
                                    <TableColumn fx:id="emailColumn" prefWidth="200.0" text="Email Address" />
                                    <TableColumn fx:id="roleColumn" prefWidth="120.0" style="-fx-alignment: CENTER;" text="Role" />
                                    <TableColumn fx:id="lastActiveColumn" prefWidth="100.0" style="-fx-alignment: CENTER-RIGHT;" text="Last Active" />
                                    <TableColumn fx:id="joinColumn" prefWidth="180.0" style="-fx-alignment:  CENTER;" text="Join Date" />
                                    <TableColumn fx:id="actionColumn" prefWidth="100.0" style="-fx-alignment: CENTER;" text="Actions" />
                                </columns>
                                <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                </columnResizePolicy>
                            </TableView>

                        </VBox>

                    </VBox>
                </ScrollPane>
            </children>
        </StackPane>
    </center>

</BorderPane>
